@model List<MagdalenaBE.ActividadBE>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        #registros {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 70%;
        }

        #registros td, #registros th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #registros tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #registros tr:hover {
            background-color: #ddd;
        }

        #registros th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #00498a;
            color: white;
        }
    </style>
</head>
<body>
    <div>
    	<hr />
        @Html.ActionLink("Crear Nueva Actividad", "NuevaActividad", "Inicio") | 
        @Html.ActionLink("Ver En Proceso", "VerEnProceso", "Inicio") |
        @Html.ActionLink("Ver Finalizadas", "VerFinalizadas", "Inicio")
        <hr />
        <br />
        <h1>Control de  Actividades Scrum</h1>
        <br />
        <h2>Listado de Actividades Scrum</h2>

        <table id="registros">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().FechaInicio)
                </th>
                <th>Acciones</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaInicio)
                    </td>
                    <td>
                        @Html.ActionLink("A Proceso", "EnProceso", item)
                    </td>
                </tr>
            }
        </table>         
    </div>
</body>
</html>
